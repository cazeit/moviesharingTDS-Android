<?xml version="1.0" encoding="utf-8"?>
<de.tdsoftware.moviesharing.video.VideoDetailsActivityView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".video.VideoDetailsActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/activity_video_details_guideline_cover_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/activity_video_details_guideline_cover_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/activity_video_details_guideline_cover_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.32" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/activity_video_details_guideline_cover_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.43" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/activity_video_details_guideline_banner_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.27" />

    <ImageView
        android:id="@+id/activity_video_details_banner_image_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/activity_video_details_guideline_banner_bottom"
        android:src="@drawable/sample_cover"
        android:scaleType="centerCrop"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/activity_video_details_card_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="4dp"
        app:cardCornerRadius="6dp"
        app:layout_constraintTop_toTopOf="@id/activity_video_details_guideline_cover_top"
        app:layout_constraintLeft_toRightOf="@id/activity_video_details_guideline_cover_left"
        app:layout_constraintRight_toLeftOf="@id/activity_video_details_guideline_cover_right"
        app:layout_constraintBottom_toTopOf="@id/activity_video_details_guideline_cover_bottom">

        <ImageView
            android:id="@+id/activity_video_details_cover_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/sample_cover" />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/activity_video_details_title_text_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Samplerino and the Samples"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/colorPrimaryLight"
        android:textAllCaps="true"
        android:textSize="@dimen/text_size_small"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="@dimen/spacing_medium"
        app:layout_constraintLeft_toRightOf="@id/activity_video_details_card_view"
        app:layout_constraintTop_toTopOf="@id/activity_video_details_card_view"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/activity_video_details_guideline_banner_bottom"/>

    <TextView
        android:id="@+id/activity_video_details_secondary_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="added on Sample.Sample.20Sample"
        android:textSize="@dimen/text_size_small"
        android:maxLines="1"
        app:layout_constraintLeft_toRightOf="@id/activity_video_details_card_view"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_video_details_banner_image_view"
        android:layout_marginTop="@dimen/spacing_medium"
        android:layout_marginStart="@dimen/spacing_medium"
        android:layout_marginEnd="@dimen/spacing_medium"/>

    <RatingBar
        android:id="@+id/activity_video_details_rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:isIndicator="false"
        android:progressTint="@color/colorRed"
        android:numStars="5"
        android:stepSize="0.5"
        android:transformPivotX="0dp"
        android:transformPivotY="0dp"
        android:layout_marginStart="@dimen/spacing_medium"
        android:layout_marginTop="@dimen/spacing_small"
        app:layout_constraintLeft_toRightOf="@id/activity_video_details_card_view"
        app:layout_constraintTop_toBottomOf="@id/activity_video_details_secondary_text_view"
        style="@style/Widget.AppCompat.RatingBar.Indicator"/>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/activity_video_details_card_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <TextView
            android:id="@+id/activity_video_details_description_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_small"
            android:textSize="@dimen/text_size_small"
