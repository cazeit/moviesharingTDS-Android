<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/fragment_movies_grid_recycler_picture_width"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/spacing_small"
    android:layout_marginTop="@dimen/spacing_normal"
    android:layout_marginEnd="@dimen/spacing_small"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/recycler_item_movies_grid_card_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_movies_grid_recycler_picture_height"
        android:elevation="@dimen/elevation_normal"
        app:cardCornerRadius="@dimen/corner_radius_normal"
        app:cardUseCompatPadding="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/recycler_item_movies_grid_thumbnail_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/recycler_item_movies_grid_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:textAlignment="center"
        android:textSize="@dimen/text_size_small"
        app:layout_constraintLeft_toLeftOf="@id/recycler_item_movies_grid_card_view"
        app:layout_constraintTop_toBottomOf="@id/recycler_item_movies_grid_card_view" />

</androidx.constraintlayout.widget.ConstraintLayout>