<?xml version="1.0" encoding="utf-8"?>
<de.tdsoftware.moviesharing.ui.video.VideoDetailsFragmentView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/activity_video_details_banner_image_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_video_details_banner_picture_height"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/sample_cover"
        android:scaleType="centerCrop"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/activity_video_details_card_view"
        android:layout_marginStart="@dimen/spacing_large"
        android:layout_width="@dimen/fragment_video_details_cover_picture_width"
        android:layout_height="@dimen/fragment_video_details_cover_picture_height"
        android:elevation="@dimen/elevation_normal"
        app:cardCornerRadius="@dimen/corner_radius_large"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/activity_video_details_title_text_view">

        <ImageView
            android:id="@+id/activity_video_details_cover_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/sample_cover" />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/activity_video_details_title_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Samplerino and the Samples"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/colorPrimaryLight"
        android:textAllCaps="true"
        android:textSize="@dimen/text_size_small"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingStart="@dimen/spacing_normal"
        android:paddingEnd="@dimen/spacing_normal"
        android:paddingTop="@dimen/spacing_large"
        android:paddingBottom="@dimen/spacing_large"
        app:layout_constraintLeft_toRightOf="@id/activity_video_details_card_view"
        app:layout_constraintBottom_toBottomOf="@id/activity_video_details_banner_image_view"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/activity_video_details_secondary_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="added on Sample.Sample.20Sample"
        android:textSize="@dimen/text_size_small"
        android:maxLines="1"
        app:layout_constraintLeft_toRightOf="@id/activity_video_details_card_view"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_video_details_banner_image_view"
        android:layout_marginTop="@dimen/spacing_small"
        android:layout_marginStart="@dimen/spacing_normal"
        android:layout_marginEnd="@dimen/spacing_normal"/>

    <RatingBar
        android:id="@+id/activity_video_details_rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="0.75"
        android:scaleY="0.75"
        android:isIndicator="false"
        android:progressTint="@color/colorRed"
        android:numStars="5"
        android:stepSize="0.5"
        android:transformPivotX="0dp"
        android:transformPivotY="0dp"
        android:layout_marginStart="@dimen/spacing_normal"
        android:layout_marginTop="@dimen/spacing_small"
        app:layout_constraintLeft_toRightOf="@id/activity_video_details_card_view"
        app:layout_constraintTop_toBottomOf="@id/activity_video_details_secondary_text_view"
        style="@style/Widget.AppCompat.RatingBar.Indicator"/>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/activity_video_details_card_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <TextView
            android:id="@+id/activity_video_details_description_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_small"
            android:textSize="@dimen/text_size_small" />
    </ScrollView>

</de.tdsoftware.moviesharing.ui.video.VideoDetailsFragmentView>